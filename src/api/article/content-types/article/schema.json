{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "lead": {
      "type": "string"
    },
    "components": {
      "type": "dynamiczone",
      "components": [
        "shared.seo",
        "blocks.product-table",
        "blocks.row-table",
        "blocks.content",
        "adsense.ad-block",
        "blocks.oembed",
        "blocks.product-detais",
        "blocks.content-ck-editor",
        "blocks.next-article",
        "blocks.previous-article",
        "blocks.related-articles"
      ]
    },
    "minsToRead": {
      "default": 6,
      "type": "integer"
    },
    "authors": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::author.author",
      "mappedBy": "article"
    },
    "articleUpdated": {
      "type": "boolean",
      "default": false
    },
    "keywords": {
      "type": "text"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "articles"
    },
    "imgBanner": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
